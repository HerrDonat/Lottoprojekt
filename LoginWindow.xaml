<Window x:Class="Lottoprojekt.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottoprojekt"
        mc:Ignorable="d"
        Title="Login" Height="319" Width="300" FontSize="14" Background="LightGray">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Benutzername:" Foreground="White"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Passwort:" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button x:Name="btnSubmit" Click="btnSubmit_Click" Content="Anmelden" Background="#b81a0f" Margin="0,10,0,0" Foreground="White" FontSize="18" Width="115" Cursor="Hand"/>
        </StackPanel>
    </Border>
</Window>
